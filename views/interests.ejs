<!DOCTYPE html>
<html lang="en">
	<head>
		<title>Facebook Prototype: Home</title>
		<link href="stylesheets/bootstrap.min.css" rel="stylesheet">
		<link href="stylesheets/styles.css" rel="stylesheet">
	</head>
	<body>
<div class="wrapper">
    <div class="box">
        <div class="row row-offcanvas row-offcanvas-left">
                      
          
            <!-- sidebar -->
            <div class="column col-sm-2 col-xs-1 sidebar-offcanvas" id="sidebar">
              
              	<ul class="nav">
          			<li><a href="#" data-toggle="offcanvas" class="visible-xs text-center"><i class="glyphicon glyphicon-chevron-right"></i></a></li>
            	</ul>
               
                <ul class="nav hidden-xs" id="lg-menu">
                    <li class="active"><a href="/home"><i class="glyphicon glyphicon-list-alt"></i> Home</a></li>
                    <li class="active"><a href="/about"><i class="glyphicon glyphicon-list-alt"></i> About Me</a></li>
                    <li><a href="/interests"><i class="glyphicon glyphicon-list"></i> Interests</a></li>
                    <li><a href="/friends"><i class="glyphicon glyphicon-paperclip"></i> Friends</a></li>
                    <li><a href="/groups"><i class="glyphicon glyphicon-refresh"></i> Groups</a></li>
                </ul>
                <ul class="list-unstyled hidden-xs" id="sidebar-footer">
                    <li>
                      <a href="index.html"><h3>Facebook</h3> <i class="glyphicon glyphicon-heart-empty"></i> 
                      <% if(session.firstname.length != 0){ %>Welcome <%= session.firstname %> <% } %></a>
                    </li>
                </ul>
            </div>
            <!-- /sidebar -->
          
            <!-- main right col -->
            <div class="column col-sm-10 col-xs-11" id="main">  
                
                <!-- top nav -->
              	<div class="navbar navbar-blue navbar-static-top">  
                    <div class="navbar-header">
                      <button class="navbar-toggle" type="button" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="sr-only">Toggle</span>
                        <span class="icon-bar"></span>
          				<span class="icon-bar"></span>
          				<span class="icon-bar"></span>
                      </button>
                      <a href="/" class="navbar-brand logo">f</a>
                  	</div>
                  	
                  	<nav class="collapse navbar-collapse" role="navigation">
                    <ul class="nav navbar-nav navbar-right">
                      <li class="dropdown">
                        <a href="/logout" class="dropdown-toggle" data-toggle="dropdown"><i class="glyphicon glyphicon-user"></i></a>
                      </li>
                    </ul>
                  	</nav>
                </div>
                <!-- /top nav -->
               <div class="padding">
                    <div class="full col-sm-9">
                      
                        <!-- content -->                      
                        <div class="row">
                          
                         <!-- main col left --> 
                           
                              <div class="well"> 
                                   <form class="form-horizontal" role="form" action="/userInterests" method="post">
                                    
                                     <div class="form-group" style="padding:14px;">
                                     <b>Music:</b> <% if(session.music.length != 0){ %><%= session.music %><% } else { %><textarea class="form-control" name="music" placeholder="Enter music you like"></textarea><% } %><br>
                                     <b>Videos:</b> <% if(session.videos.length != 0){ %><%= session.videos %><% } else { %><textarea class="form-control" name="videos" placeholder="Enter videos you like"></textarea><% } %><br>
                                     <b>Movies:</b> <% if(session.movies.length != 0){ %><%= session.movies %><% } else { %><textarea class="form-control" name="movies" placeholder="Enter movies you like"></textarea><% } %><br>
                                     <b>Shows:</b> <% if(session.shows.length != 0){ %><%= session.shows %><% } else { %><textarea class="form-control" name="shows" placeholder="Enter shows you like"></textarea><% } %><br>
                                     <b>Sports:</b> <% if(session.sports.length != 0){ %><%= session.sports %><% } else { %><textarea class="form-control" name="sports" placeholder="Enter sports you like"></textarea><% } %><br>
                                      <input type="submit" class="btn btn-primary pull-right">
                                    </div>
                                  </form>
                              </div>
                           
                          </div>
                       </div><!--/row-->
                        <hr>
                        
                      
                    </div><!-- /col-9 -->
                </div><!-- /padding -->
            </div>
            <!-- /main -->
          
        </div>
    </div>
</div>


<!--post modal-->
<div id="postModal" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog">
  <div class="modal-content">
      <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
      Update Status
      </div>
      <div class="modal-body">
          <form class="form center-block">
            <div class="form-group">
              <textarea class="form-control input-lg" autofocus="" placeholder="What do you want to share?"></textarea>
            </div>
          </form>
      </div>
      <div class="modal-footer">
          <div>
          <button class="btn btn-primary btn-sm" data-dismiss="modal" aria-hidden="true">Post</button>
            <ul class="pull-left list-inline"><li><a href=""><i class="glyphicon glyphicon-upload"></i></a></li><li><a href=""><i class="glyphicon glyphicon-camera"></i></a></li><li><a href=""><i class="glyphicon glyphicon-map-marker"></i></a></li></ul>
      </div>  
      </div>
  </div>
  </div>
</div>
  <!-- script references -->
    <script src="//ajax.googleapis.com/ajax/libs/jquery/2.0.2/jquery.min.js"></script>
    <script src="js/bootstrap.min.js"></script>
    <script src="js/scripts.js"></script>
  </body>
</html>